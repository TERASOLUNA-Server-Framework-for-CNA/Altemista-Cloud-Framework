	<build>
		<plugins>

			<!-- Imports asciidoc bundles from the dependencies -->
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>

					<!-- This project does not generate an asciidoc bundle -->
					<execution>
						<id>import-asciidoc-assembly-descriptor</id>
						<phase />
					</execution>

					<!-- Imports asciidoc bundles from the dependencies -->
					<execution>
						<id>import-asciidoc</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeGroupIds>org.altemista.cloudfwk</includeGroupIds>
							<excludeTransitive>true</excludeTransitive>
							<classifier>asciidoc</classifier>
							<type>zip</type>
							<outputDirectory>${project.build.directory}/generated-resources</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>

					<!-- Copies this project asciidoc as if it was a asciidoc bundle from 
						a dependency -->
					<execution>
						<id>copy-asciidoc</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${project.build.directory}/generated-resources/asciidoc/${project.artifactId}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/asciidoc</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-asciidoc-images</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${project.build.directory}/generated-resources/images/${project.artifactId}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/images</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-asciidoc-resources</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>generate-resources</phase>
						<configuration>
							<outputDirectory>${project.build.directory}/generated-resources/resources/${project.artifactId}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
								</resource>
							</resources>
						</configuration>
					</execution>

					<!-- Alternatively, use the :data-uri: macro to embed the images as 
						base64 into the HTML -->
					<execution>
						<id>prepare-assembly-html</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/generated-docs/images</outputDirectory>
							<resources>
								<resource>
									<directory>${project.build.directory}/generated-resources/images</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>prepare-assembly-html-resources</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/generated-docs/resources</outputDirectory>
							<resources>
								<resource>
									<directory>${project.build.directory}/generated-resources/resources</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- Compiles the asciidoc, generating the documentation in HTML5 format, 
				and bundles it -->
			<plugin>
				<groupId>org.asciidoctor</groupId>
				<artifactId>asciidoctor-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>compile-asciidoc-html</id>
						<phase>compile</phase>
						<goals>
							<goal>process-asciidoc</goal>
						</goals>
						<configuration>
							<backend>html5</backend>
							<!-- While the book doctype seems to fit better, there is no chapter 
								numbering and the toc gets confusing. <doctype>book</doctype> -->
							<!-- WORKAROUND Currently, the configuration option sourceDocumentName 
								does not support multiple files, so we are using the folder "guides" to declare 
								the multiple roots for the different documents <sourceDocumentName>index.adoc</sourceDocumentName> -->
							<sourceDirectory>${basedir}/src/main/asciidoc/guides</sourceDirectory>
							<baseDir>${project.build.directory}/generated-resources/asciidoc</baseDir>
							<attributes>

								<!-- == AsciiDoc / Asciidoctor properties == -->
								<icons>font</icons>
								<sectanchors>true</sectanchors>
								<sectnums>true</sectnums>
								<sectnumlevels>4</sectnumlevels>
								<stylesheet>${project.artifactId}/altemista-cloudfwk-documentation.css</stylesheet>
								<toc>left</toc>
								<toclevels>3</toclevels>

								<source-highlighter>coderay</source-highlighter>
								<source-language>java</source-language>
								<source-indent>0</source-indent>

								<!-- experimental enables: keyboard shortcuts macro (kbd:[]), menu 
									selections (menu:[]), UI buttons (btn:[]) -->
								<experimental>true</experimental>

								<!-- == Custom properties == -->
								<!-- baseDir is passed as an attribute to normalize includes -->
								<basedir>${project.build.directory}/generated-resources/asciidoc</basedir>
								<project-version>${project.version}</project-version>
								<terasoluna-version>5.2.0.RELEASE</terasoluna-version>
								<framework>ACF</framework>
								<author>Center of Excellence ALTEMISTA Cloud Framework</author>
								<email>tsfplus@everis.com</email>
								<updatesite>https://terasoluna.everis.com/update-site/</updatesite>

							</attributes>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>

					<!-- This project does not generate an asciidoc bundle -->
					<execution>
						<id>export-asciidoc</id>
						<phase />
					</execution>

					<execution>
						<id>assembly-html</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>src/assembly/html.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
