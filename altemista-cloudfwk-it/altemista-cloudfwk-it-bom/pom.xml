<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<groupId>org.altemista.cloudfwk.it</groupId>
	<artifactId>altemista-cloudfwk-it-bom</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>altemista-cloudfwk integration tests: bill of materials</name>
	<description>Bill of materials of the altemista-cloudfwk integration tests</description>
	
	<properties>
		<!-- == altemista-cloudfwk framework version == -->
		<altemista-cloudfwk.version>${project.version}</altemista-cloudfwk.version>
		
		<!-- == SeleniumHQ version -->
		<selenium.version>2.53.1</selenium.version>
	</properties>
	
	<dependencyManagement>
		<dependencies>
		
			<!-- == ACF framework: bill of materials == -->
			<dependency>
				<groupId>org.altemista.cloudfwk.framework</groupId>
				<artifactId>altemista-cloudfwk-bom</artifactId>
				<version>${altemista-cloudfwk.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			
			<!-- == Begin ACF utility classes for integration tests == -->
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common</artifactId>
				<version>${altemista-cloudfwk.version}</version>
			</dependency>
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common</artifactId>
				<version>${altemista-cloudfwk.version}</version>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common-boot</artifactId>
				<version>${altemista-cloudfwk.version}</version>
			</dependency>
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common-boot</artifactId>
				<version>${altemista-cloudfwk.version}</version>
				<type>test-jar</type>
			</dependency>
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common-webapp</artifactId>
				<version>${altemista-cloudfwk.version}</version>
			</dependency>
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-common-webapp</artifactId>
				<version>${altemista-cloudfwk.version}</version>
				<type>test-jar</type>
			</dependency>
			<!-- == End ACF utility classes for integration tests == -->

			<!-- == Begin SeleniumHQ == -->
			<dependency>
				<groupId>org.seleniumhq.selenium</groupId>
				<artifactId>selenium-java</artifactId>
				<version>${selenium.version}</version>
			</dependency>
			<!-- == End SeleniumHQ == -->

		</dependencies>
	</dependencyManagement>

</project>
