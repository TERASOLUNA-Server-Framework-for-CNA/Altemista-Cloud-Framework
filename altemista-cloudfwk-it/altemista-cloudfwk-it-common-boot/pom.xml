<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.altemista.cloudfwk.framework</groupId>
		<artifactId>altemista-cloudfwk-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath/>
	</parent>

	<groupId>org.altemista.cloudfwk.it</groupId>
	<artifactId>altemista-cloudfwk-it-common-boot</artifactId>
	<name>Integration tests utilities for Spring Boot applications</name>
	<description>Altemista cloud framework base classes and utilities for define and execute integration tests of Spring Boot applications</description>

	<dependencyManagement>
		<dependencies>

			<!-- == Altemista cloud framework integration tests: bill of materials == -->
			<dependency>
				<groupId>org.altemista.cloudfwk.it</groupId>
				<artifactId>altemista-cloudfwk-it-bom</artifactId>
				<version>${altemista-cloudfwk.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

		</dependencies>
	</dependencyManagement>

	<dependencies>
	
		<!-- == Begin ACF framework == -->
		<dependency>
			<!-- Depends on altemista-cloudfwk-boot-conf to initialize the Spring Boot application -->
			<groupId>org.altemista.cloudfwk.framework</groupId>
			<artifactId>altemista-cloudfwk-boot-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.it</groupId>
			<artifactId>altemista-cloudfwk-it-common</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.it</groupId>
			<artifactId>altemista-cloudfwk-it-common</artifactId>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>
		<!-- == End ACF framework == -->
		
		<!-- == Begin test dependencies == -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- == End test dependencies == -->
		
	</dependencies>
	
	<build>
		<plugins>
		
			<!-- This module also builds a test-jar -->
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>

</project>
