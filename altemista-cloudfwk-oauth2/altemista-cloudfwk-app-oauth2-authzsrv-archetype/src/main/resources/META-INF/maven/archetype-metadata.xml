<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	name="altemista-cloudfwk-app-oauth2-authzsrv" partial="true"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd">

	<requiredProperties>
		<requiredProperty key="terasolunaPlusVersion">
			<defaultValue>1.0.0.RELEASE</defaultValue>
		</requiredProperty>
		<requiredProperty key="applicationName">
			<defaultValue>my-application</defaultValue>
		</requiredProperty>
		<requiredProperty key="appShortId">
			<defaultValue>application</defaultValue>
		</requiredProperty>
		
		<requiredProperty key="clientId">
			<defaultValue>client</defaultValue>
		</requiredProperty>
		<requiredProperty key="clientSecret">
			<defaultValue>secret</defaultValue>
		</requiredProperty>
		<requiredProperty key="clientScope">
			<defaultValue>SCOPE</defaultValue>
		</requiredProperty>
		<requiredProperty key="clientAuthorizedGrantTypes">
			<defaultValue>authorization_code,implicit,client_credentials,password</defaultValue>
		</requiredProperty>
	</requiredProperties>

	<fileSets>
		<fileSet filtered="true" encoding="UTF-8">
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.properties</include>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
	</fileSets>
	
</archetype-descriptor>
