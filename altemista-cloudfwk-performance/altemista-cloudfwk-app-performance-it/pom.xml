<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.altemista.cloudfwk.it</groupId>
		<artifactId>altemista-cloudfwk-it-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath />
	</parent>

	<groupId>org.altemista.cloudfwk.performance</groupId>
	<artifactId>altemista-cloudfwk-app-performance-it</artifactId>
	<packaging>${packaging.type}</packaging>

	<name>altemista-cloudfwk performance module integration tests</name>
	<description>Integration tests for the ACF performance module</description>

	<properties>
		<hsqldb.version>2.3.3</hsqldb.version>
	</properties>

	<dependencies>

		<!-- == Begin ACF module to be tested == -->
		<dependency>
			<!-- Depends on altemista-cloudfwk-webapp-tiles for Apache Tiles on the demo 
				pages -->
			<groupId>org.altemista.cloudfwk.webapp.modules</groupId>
			<artifactId>altemista-cloudfwk-webapp-tiles</artifactId>
		</dependency>
		<dependency>
			<!-- Depends on altemista-cloudfwk-core-persistence-mybatis to use persistence -->
			<groupId>org.altemista.cloudfwk.persistence</groupId>
			<artifactId>altemista-cloudfwk-core-persistence-mybatis-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.performance</groupId>
			<artifactId>altemista-cloudfwk-app-performance-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.performance</groupId>
			<artifactId>altemista-cloudfwk-app-performance-jdbc-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.performance</groupId>
			<artifactId>altemista-cloudfwk-app-performance-web-conf</artifactId>
		</dependency>
		<!-- == End ACF module to be tested == -->

		<!-- == Begin in-memory database -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jdbc</artifactId>
		</dependency>
		<dependency>
			<groupId>org.hsqldb</groupId>
			<artifactId>hsqldb</artifactId>
		</dependency>
		<!-- == End in-memory database -->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>

	</dependencies>

	<build>
		<resources>
			<!-- Default resources folder -->
			<resource>
				<directory>${project.basedir}/src/main/resources</directory>
			</resource>
			<!-- Includes also the mappers created by the MyBatis Generator -->
			<resource>
				<directory>${project.basedir}/src/main/java</directory>
				<includes>
					<include>**/*Mapper.xml</include>
				</includes>
			</resource>
		</resources>
	</build>

	<profiles>

		<!-- The MyBatis generator is not meant to be run in each compilation, 
			but to be manually triggered to create the initial version of the entities 
			and mappers that will probably be modified (and, hence, are to be included 
			in source control) -->
		<profile>
			<id>recreate-mybatis-sources</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>

					<!-- During the initialize phase, starts the in-memory database -->
					<plugin>
						<groupId>org.onebusaway.plugins</groupId>
						<artifactId>maven-hsqldb-plugin</artifactId>
						<version>1.0</version>

						<dependencies>
							<dependency>
								<groupId>org.hsqldb</groupId>
								<artifactId>hsqldb</artifactId>
								<version>${hsqldb.version}</version>
							</dependency>
						</dependencies>

						<configuration>
							<dbName>MyBatisDB</dbName>
							<mode>server</mode>
							<isTransient>true</isTransient>
						</configuration>

						<executions>
							<execution>
								<id>startTestDb</id>
								<phase>initialize</phase>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>

					<!-- During the initialize phase, populates the in-memory database -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sql-maven-plugin</artifactId>
						<version>1.5</version>

						<dependencies>
							<dependency>
								<groupId>org.hsqldb</groupId>
								<artifactId>hsqldb</artifactId>
								<version>${hsqldb.version}</version>
							</dependency>
						</dependencies>

						<configuration>
							<driver>org.hsqldb.jdbcDriver</driver>
							<url>jdbc:hsqldb:hsql://localhost:9001/MyBatisDB</url>
							<username>sa</username>
							<password></password>
							<!-- no transaction -->
							<autocommit>true</autocommit>
						</configuration>

						<executions>
							<execution>
								<id>create-db</id>
								<phase>initialize</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<url>jdbc:hsqldb:hsql://localhost:9001/MyBatisDB</url>
									<srcFiles>
										<srcFile>${basedir}/src/main/resources/scripts/schema.sql</srcFile>
										<srcFile>${basedir}/src/main/resources/scripts/data.sql</srcFile>
									</srcFiles>
								</configuration>
							</execution>
						</executions>
					</plugin>

					<!-- == Begin MyBatis code generation == -->
					<plugin>
						<groupId>org.mybatis.generator</groupId>
						<artifactId>mybatis-generator-maven-plugin</artifactId>

						<dependencies>
							<dependency>
								<groupId>org.hsqldb</groupId>
								<artifactId>hsqldb</artifactId>
								<version>${hsqldb.version}</version>
							</dependency>
						</dependencies>

						<configuration>
							<configurationFile>${basedir}/src/main/resources/generatorConfig.xml</configurationFile>
							<outputDirectory>${basedir}/src/main/java</outputDirectory>
						</configuration>

						<executions>
							<execution>
								<id>generate-mybatis-sources</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>generate</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<!-- == End MyBatis code generation == -->

				</plugins>
			</build>
		</profile>

	</profiles>


</project>
