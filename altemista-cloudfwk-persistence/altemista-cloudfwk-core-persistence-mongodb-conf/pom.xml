<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.altemista.cloudfwk.framework</groupId>
		<artifactId>altemista-cloudfwk-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath/>
	</parent>
	<groupId>org.altemista.cloudfwk.persistence</groupId>	
	<artifactId>altemista-cloudfwk-core-persistence-mongodb-conf</artifactId>
	<name>altemista-cloudfwk persistence: MongoDB (Spring Data) CONF</name>

	<dependencies>

		<!-- == Begin ACF framework == -->
		<dependency>
			<groupId>org.altemista.cloudfwk.framework</groupId>
			<artifactId>altemista-cloudfwk-core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.framework</groupId>
			<artifactId>altemista-cloudfwk-common</artifactId>
		</dependency>
		<!-- == Begin ACF framework == -->
		
		<!-- == Begin Spring Framework == -->
		<dependency>
			<groupId>org.springframework.data</groupId>
			<artifactId>spring-data-mongodb</artifactId>
		</dependency>
		<!-- == End Spring Framework == -->
		
		<!-- == Begin MongoDB driver == -->
		<dependency>
			<groupId>org.mongodb</groupId>
			<artifactId>mongo-java-driver</artifactId>
		</dependency>
		<!-- == End MongoDB driver == -->
		
		<!-- == Begin QueryDSL == -->
		<dependency>
			<groupId>com.querydsl</groupId>
			<artifactId>querydsl-mongodb</artifactId>
		</dependency>
		<dependency>
			<groupId>com.querydsl</groupId>
			<artifactId>querydsl-apt</artifactId>
		</dependency>
		<!-- == End QueryDSL == -->

		<!-- == Begin test dependencies == -->
		<dependency>
			<groupId>org.altemista.cloudfwk.framework</groupId>
			<artifactId>altemista-cloudfwk-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- == End test dependencies == -->

	</dependencies>
	
	<build>
		<plugins>
	
			<!-- == Begin QueryDSL code generation == -->
			<plugin>
				<groupId>com.mysema.maven</groupId>
				<artifactId>apt-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>apt-generate-querydsl-test-sources</id>
						<goals>
							<goal>test-process</goal>
						</goals>
						<configuration>
							<outputDirectory>target/generated-test-sources/java</outputDirectory>
							<processor>org.springframework.data.mongodb.repository.support.MongoAnnotationProcessor</processor>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- == End QueryDSL code generation == -->
	
		</plugins>
	</build>

</project>