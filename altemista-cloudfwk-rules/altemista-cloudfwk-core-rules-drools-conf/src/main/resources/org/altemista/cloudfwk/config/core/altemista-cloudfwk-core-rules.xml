<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- Scan all the beans of all the rules modules in the classpath -->
	<context:component-scan base-package="org.altemista.cloudfwk.core.rules" />

	<!-- Imports the framework configuration files of every rules module implementation -->
	<import resource="classpath*:org/altemista/cloudfwk/config/rules/altemista-cloudfwk-rules-*.xml" />

</beans>