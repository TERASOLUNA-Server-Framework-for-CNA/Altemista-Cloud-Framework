<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<!-- Sets the policy to retrieve the RulesLocator from specific locations on the classpath -->
	<bean id="rulesetContainerResolver" class="org.altemista.cloudfwk.core.rules.ruleset.impl.NameBasedRulesetContainerResolverImpl">
		<constructor-arg>
			<map>
				<entry key="ruleset_1" value-ref="advancedContainerExample" />
				<entry key="ruleset_2" value-ref="advancedContainerExample" />
			</map>
		</constructor-arg>
		<property name="fallbackRulesetResolver" ref="simpleContainerExample" />
	</bean>

	<bean id="advancedContainerExample" class="org.altemista.cloudfwk.rules.drools.resolver.impl.DroolsUrlRulesetContainerImpl">
		<property name="defaultContainer" value="true" />
		<property name="url" value="classpath:JarRulesets/advanced" />
	</bean>
	
	<bean id="simpleContainerExample" class="org.altemista.cloudfwk.rules.drools.resolver.impl.DroolsUrlRulesetContainerImpl">
		<property name="url" value="classpath:JarRulesets/simple" />
	</bean>
	
</beans>