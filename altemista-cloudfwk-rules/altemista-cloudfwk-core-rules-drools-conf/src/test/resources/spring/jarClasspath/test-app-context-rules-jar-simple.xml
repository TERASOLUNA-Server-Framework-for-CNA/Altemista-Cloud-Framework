<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<!-- Sets the policy to retrieve the RulesetContainer from specific locations on the classpath -->
	<bean id="rulesetContainerResolver" class="org.altemista.cloudfwk.core.rules.ruleset.impl.SimpleRulesetContainerResolverImpl">
		<constructor-arg>
			<bean class="org.altemista.cloudfwk.rules.drools.resolver.impl.DroolsUrlRulesetContainerImpl">
				<property name="url" value="classpath:JarRulesets/simple" />
			</bean>
		</constructor-arg>
	</bean>
	
</beans>