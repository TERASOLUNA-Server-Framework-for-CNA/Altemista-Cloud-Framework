<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
		
	<!--
		(this file mimicks altemista-cloudfwk-web-soap-archetype archetype)
	 -->

	<!-- (fake business services here) -->
	<context:component-scan base-package="org.altemista.cloudfwk.it.service" />

	<!-- Scan for Spring beans declared via annotations. -->
	
	<!-- bottom-up (contract-last) examples -->
	<context:component-scan base-package="org.altemista.cloudfwk.it.soap" />
	
	<!-- top-down (contract-first) examples -->
	<context:component-scan base-package="org.altemista.cloudfwk.it.topdownexample" />

	<!-- Automatically exports the JAX-WS services using Apache CXF. -->
	<bean class="org.altemista.cloudfwk.web.soap.SimpleCxfJaxWsServiceExporter">
		<property name="basePackage" value="org.altemista.cloudfwk.it" />
	</bean>

</beans>