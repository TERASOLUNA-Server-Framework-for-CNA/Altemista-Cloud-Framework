<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.altemista.cloudfwk.it</groupId>
		<artifactId>altemista-cloudfwk-it-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath />
	</parent>
	
	<groupId>org.altemista.cloudfwk.soap</groupId>
	<artifactId>altemista-cloudfwk-soap-wss-it</artifactId>
	<packaging>${packaging.type}</packaging>
	
	<name>altemista-cloudfwk SOAP client/server with WS-Security integration tests</name>
	<description>altemista-cloudfwk SOAP client/server with WS-Security (Apache CXF and Spring Security based) integration tests</description>

	<dependencies>

		<!-- == Begin ACF modules to be tested (server part) == -->
		<dependency>
			<!-- ACF SOAP server -->
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-web-soap-conf</artifactId>
		</dependency>
		<dependency>
			<!-- ACF SOAP server with WS-Security -->
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-web-soap-wss-conf</artifactId>
		</dependency>
		<dependency>
			<!-- Business services Spring Security authorization -->
			<groupId>org.altemista.cloudfwk.security</groupId>
			<artifactId>altemista-cloudfwk-core-security-conf</artifactId>
		</dependency>
		<dependency>
			<!-- Spring Security authentication -->
			<groupId>org.altemista.cloudfwk.security</groupId>
			<artifactId>altemista-cloudfwk-app-security-conf</artifactId>
		</dependency>
		<!-- == End ACF modules to be tested (server part) == -->

		<!-- == Begin ACF modules to be tested (JUnit part) == -->
		<dependency>
			<!-- ACF SOAP client -->
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-core-soap-conf</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- ACF SOAP client with WS-Security -->
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-core-soap-wss-conf</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- == End ACF modules to be tested (JUnit part) == -->

	</dependencies>
	
	<build>
		<plugins>
		
			<!-- Excludes the server part from the IT classpath (to have only the client part) -->
			<plugin>
				<artifactId>maven-failsafe-plugin</artifactId>
				<configuration>
					<classpathDependencyExcludes>
						<classpathDependencyExclude>org.altemista.cloudfwk.soap:altemista-cloudfwk-web-soap-conf</classpathDependencyExclude>
						<classpathDependencyExclude>org.altemista.cloudfwk.soap:altemista-cloudfwk-web-soap-wss-conf</classpathDependencyExclude>
					</classpathDependencyExcludes>
				</configuration>
			</plugin>
		
		</plugins>
	</build>
	
	<profiles>

		<!-- == Builds and run ACF integration tests == -->
		<profile>
			<id>wildfly8-environment</id>
			<dependencies>
				<!-- Explicit JAX-WS API declaration for JBoss -->
				<dependency>
					<groupId>javax.xml.ws</groupId>
					<artifactId>jaxws-api</artifactId>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>wildfly9-environment</id>
			<dependencies>
				<!-- Explicit JAX-WS API declaration for JBoss -->
				<dependency>
					<groupId>javax.xml.ws</groupId>
					<artifactId>jaxws-api</artifactId>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<id>wildfly10-environment</id>
			<dependencies>
				<!-- Explicit JAX-WS API declaration for JBoss -->
				<dependency>
					<groupId>javax.xml.ws</groupId>
					<artifactId>jaxws-api</artifactId>
				</dependency>
			</dependencies>
		</profile>

	</profiles>
	
</project>
