<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.altemista.cloudfwk.framework</groupId>
		<artifactId>altemista-cloudfwk-parent</artifactId>
		<version>3.0.0-SNAPSHOT</version>
		<relativePath />
	</parent>
	
	<groupId>org.altemista.cloudfwk.soap</groupId>
	<artifactId>altemista-cloudfwk-web-soap-wss</artifactId>
	
	<name>altemista-cloudfwk SOAP server with WS-Security</name>
	<description>altemista-cloudfwk SOAP server with WS-Security (Apache CXF and Spring Security based)</description>

	<dependencies>

		<!-- == Begin ACF framework == -->
		<dependency>
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-web-soap</artifactId>
		</dependency>
		<dependency>
			<groupId>org.altemista.cloudfwk.soap</groupId>
			<artifactId>altemista-cloudfwk-core-soap-wss</artifactId>
		</dependency>
		<!-- == End ACF framework == -->

		<!-- == Begin Apache CXF == -->
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-ws-security</artifactId>
			<optional>true</optional>
		</dependency>
		<!-- == End Apache CXF == -->
		
		<!-- == Begin Spring Security == -->
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-core</artifactId>
			<optional>true</optional>
		</dependency>
		<!-- == End Spring Security -->
		
	</dependencies>

</project>
