<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>cloud.altemista.fwk.demo</groupId>
    <artifactId>AltemistaMoviesRecommendations</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>
  <artifactId>AltemistaMoviesRecommendations-data-core</artifactId>
  <name>AltemistaMoviesRecommendations data core project</name>
  <dependencies>
    <dependency>
      <groupId>cloud.altemista.fwk.framework</groupId>
      <artifactId>cloud-altemistafwk-core</artifactId>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.framework</groupId>
      <artifactId>cloud-altemistafwk-test</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework.data</groupId>
      <artifactId>spring-data-rest-core</artifactId>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.persistence</groupId>
      <artifactId>cloud-altemistafwk-core-persistence-jpa-hibernate-conf</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.demo</groupId>
      <artifactId>AltemistaMoviesRecommendations-env</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>com.mysema.maven</groupId>
        <artifactId>apt-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-jpa-querydsl-sources</id>
            <goals>
              <goal>process</goal>
            </goals>
            <configuration>
              <outputDirectory>target/generated-sources/java</outputDirectory>
              <processor>com.mysema.query.apt.jpa.JPAAnnotationProcessor</processor>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
