<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.mycompany</groupId>
		<artifactId>new-application</artifactId>
		<version>3.1.0.RELEASE</version>
	</parent>
	<artifactId>new-application-webapp</artifactId>
	<packaging>war</packaging>
	<name>new-application web application (WAR) aggregator project</name>
	<dependencies>
		<dependency>
			<groupId>cloud.altemista.fwk.framework</groupId>
			<artifactId>cloud-altemistafwk-webapp-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>com.mycompany</groupId>
			<artifactId>new-application-env</artifactId>
		</dependency>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>com.mycompany</groupId>
			<artifactId>new-application-module-core</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>cloud.altemista.fwk.docker</groupId>
			<artifactId>cloud-altemistafwk-webapp-docker-conf</artifactId>
		</dependency>
		<dependency>
			<groupId>cloud.altemista.fwk.swagger</groupId>
			<artifactId>cloud-altemistafwk-webapp-swagger-conf</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>com.spotify</groupId>
				<artifactId>dockerfile-maven-plugin</artifactId>
				<version>1.3.7</version>
				<configuration>
					<repository>webapp-test</repository>
					<resources>
						<resource>
							<targetPath>/usr/local/tomcat/webapps/</targetPath>
							<directory>${project.build.directory}</directory>
							<include>${project.build.finalName}.war</include>
						</resource>
					</resources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>tomcat</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>javax.servlet</groupId>
					<artifactId>jstl</artifactId>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>generate-swagger</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
							<excludes>
								<exclude>**/io/swagger/*.java</exclude>
							</excludes>
						</configuration>
					</plugin>
					<plugin>
						<groupId>io.swagger</groupId>
						<artifactId>swagger-codegen-maven-plugin</artifactId>
						<version>2.2.3</version>
						<executions>
							<execution>
								<goals>
									<goal>generate</goal>
								</goals>
								<configuration>
									<inputSpec>${basedir}/src/main/resources/example.yaml</inputSpec>
									<language>spring</language>
									<apiPackage>com.mycompany.application.webapp.controller</apiPackage>
									<modelPackage>com.mycompany.application.webapp.controller</modelPackage>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
