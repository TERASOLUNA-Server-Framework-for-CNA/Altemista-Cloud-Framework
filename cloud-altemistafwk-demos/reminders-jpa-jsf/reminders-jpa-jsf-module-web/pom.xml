<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>cloud.altemista.fwk</groupId>
    <artifactId>reminders-jpa-jsf</artifactId>
    <version>3.0.1.RELEASE</version>
  </parent>
  <artifactId>reminders-jpa-jsf-module-web</artifactId>
  <name>reminders-jpa-jsf module web project</name>
  <properties>
    <apache-cxf.version>3.1.9</apache-cxf.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>cloud.altemista.fwk.framework</groupId>
      <artifactId>cloud-altemistafwk-web-conf</artifactId>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk</groupId>
      <artifactId>reminders-jpa-jsf-module-common</artifactId>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.soap</groupId>
      <artifactId>cloud-altemistafwk-common-soap-conf</artifactId>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.soap</groupId>
      <artifactId>cloud-altemistafwk-web-soap</artifactId>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk</groupId>
      <artifactId>reminders-jpa-jsf-env</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>cloud.altemista.fwk.security</groupId>
      <artifactId>cloud-altemistafwk-web-security-conf</artifactId>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <version>${apache-cxf.version}</version>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
            <configuration>
              <wsdlRoot>${basedir}/src/main/resources/wsdl/</wsdlRoot>
              <includes>
                <include>*.wsdl</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
