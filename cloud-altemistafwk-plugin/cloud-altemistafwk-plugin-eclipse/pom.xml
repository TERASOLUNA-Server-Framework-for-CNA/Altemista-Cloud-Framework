<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>cloud.altemista.fwk.framework</groupId>
		<artifactId>cloud-altemistafwk-recommended-plugins</artifactId>
		<version>3.0.0.RELEASE</version>
		<relativePath />
	</parent>

	<groupId>cloud.altemista.fwk.plugin</groupId>
	<artifactId>cloud-altemistafwk-plugin-eclipse</artifactId>
	
	<!--
		Despite this project being a Eclipse plug-in project (and, thus, not a maven project),
		this pom.xml eases the task of gathering all the dependencies in the proper folder.
		
		However, if there are changes in the dependency set,
		the jars have to be added to (or removed from)  MANIFEST.MF and build.properties files,
		preferably using the proper Eclipse Plug-in Development tool.
		
		As it is included as a .jar, changes in cloud-altemistafwk-plugin-config/core will not be detected unless:
		1a) cloud-altemistafwk-plugin-config > Run As > Maven install
		1b) cloud-altemistafwk-plugin-core > Run As > Maven install
		2) cloud-altemistafwk-plugin-eclipse/pom.xml > Run As > Maven build
		3) cloud-altemistafwk-plugin-eclipse > Refresh
	 -->
	 
	<properties>
		<java.source.version>1.7</java.source.version>
		<java.target.version>1.7</java.target.version>
		
		<cloud-altemistafwk-plugin-config.version>3.0.0.RELEASE</cloud-altemistafwk-plugin-config.version>
		<cloud-altemistafwk-plugin-core.version>3.0.0.RELEASE</cloud-altemistafwk-plugin-core.version>
	</properties>
	
	<dependencies>
	
		<!-- == Begin Altemista cloud plug-in == -->
		<dependency>
			<groupId>cloud.altemista.fwk.plugin</groupId>
			<artifactId>cloud-altemistafwk-plugin-config</artifactId>
			<version>${cloud-altemistafwk-plugin-config.version}</version>
		</dependency>
		<dependency>
			<groupId>cloud.altemista.fwk.plugin</groupId>
			<artifactId>cloud-altemistafwk-plugin-core</artifactId>
			<version>${cloud-altemistafwk-plugin-core.version}</version>
		</dependency>
		<!-- == End Altemista cloud plug-in == -->
		
	</dependencies>
	
	<build>
		<defaultGoal>clean dependency:copy-dependencies</defaultGoal>
		<directory>${project.basedir}/lib</directory>
		
		<plugins>
		
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
					<includeScope>compile</includeScope>
					<outputDirectory>${project.build.directory}</outputDirectory>
					<stripVersion>true</stripVersion>
				</configuration>
				<executions>
					<execution>
						<id>import-3rd-party-dependencies</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.apache.maven.plugins
										</groupId>
										<artifactId>
											maven-dependency-plugin
										</artifactId>
										<versionRange>
											[2.10,)
										</versionRange>
										<goals>
											<goal>
												copy-dependencies
											</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>